<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="base.Theme.NavigationDrawer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Ensure colorSurface is defined -->
        <item name="colorSurface">@color/white</item>
        <!-- Button styles -->
        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="colorControlNormal">@color/teal_700</item> <!-- For normal button state -->
        <item name="colorControlActivated">@color/lavender</item> <!-- For activated button state -->
        <item name="colorControlHighlight">@color/white</item> <!-- For highlighted button state -->
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/lavender</item> <!-- Set background color -->
        <item name="android:textColor">@color/white</item> <!-- Set text color -->
    </style>

    <style name="Theme.NavigationDrawer" parent="base.Theme.NavigationDrawer"/>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
</resources>
